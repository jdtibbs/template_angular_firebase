{
  "rules": {
    "profile": {
      ".read": "auth.uid !== null",
      "$profile_id": {
        ".write": "$profile_id === auth.uid",
        ".validate": "newData.hasChildren(['firstName', 'lastName'])",
        "firstName": {
          ".validate": "newData.isString() && newData.val().length <= 50"
        },
        "lastName": {
          ".validate": "newData.isString() && newData.val().length <= 50"
        },
        "$other": {
          ".validate": false
        }
      }
    }
  }
}
